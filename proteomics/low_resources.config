/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    nf-core/quantms Nextflow config file
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Default config options for all compute environments
----------------------------------------------------------------------------------------
*/

params {
    config_profile_name        = 'DDA LFQ'
    config_profile_description = 'Check pipeline function of the label-free quantification method'

    // Limit resources so that this can run on GitHub Actions
    max_cpus = 2
    max_memory = 6.GB
    max_time = 2.h
    posterior_probabilities = "percolator"
    search_engines = "msgf,comet"
    add_decoys = true
    add_triqler_output = true
    protein_level_fdr_cutoff = 0.01
    psm_pep_fdr_cutoff = 0.01
}