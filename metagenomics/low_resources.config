/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Nextflow config file for running minimal data
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Defines input files and everything required to run a fast and simple pipeline with few samples.

    Use as follows:
        nextflow run nf-core/taxprofiler -profile docker --outdir <OUTDIR> \
          -c metagenomics/low_resources.config

----------------------------------------------------------------------------------------
*/

process {
    resourceLimits = [
        cpus: 2,
        memory: '6.GB',
        time: '1.h'
    ]
}

params {
    config_profile_name                    = 'Low resources'
    config_profile_description             = 'Minimal dataset to check pipeline function'

    perform_shortread_qc                   = true
    perform_shortread_redundancyestimation = true
    shortread_qc_mergepairs                = true
    perform_shortread_complexityfilter     = true
    perform_shortread_hostremoval          = true
    perform_longread_qc                    = false
    perform_longread_hostremoval           = false
    perform_runmerging                     = true
    hostremoval_reference                  = 'https://raw.githubusercontent.com/nf-core/test-datasets/modules/data/genomics/homo_sapiens/genome/genome.fasta'
    run_metaphlan                          = false
    run_kaiju                              = false
    run_centrifuge                         = false
    run_diamond                            = false
    run_ganon                              = false
    run_krona                              = false
    run_kraken2                            = true
    run_bracken                            = true
    run_malt                               = false
    run_krakenuniq                         = false
    run_motus                              = false
    run_kmcp                               = false
    krona_taxonomy_directory               = 'https://raw.githubusercontent.com/nf-core/test-datasets/modules/data/genomics/sarscov2/metagenome/krona_taxonomy.tab'
    malt_save_reads                        = false
    kraken2_save_reads                     = false
    centrifuge_save_reads                  = false
    run_profile_standardisation            = false
}
